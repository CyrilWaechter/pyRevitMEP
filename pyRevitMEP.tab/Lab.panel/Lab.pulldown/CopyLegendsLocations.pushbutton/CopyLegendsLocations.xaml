<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Copy legends locations between viewports:" Height="180" Width="200" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="Manual" Left="300" Top="180" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">
            <Button Content="Copy" Height="30" Margin="10,10" Click="copy_click"/>
            <Button Content="Paste" Height="30" Margin="10,10" Click="paste_click"/>
        </StackPanel>
</Window>
